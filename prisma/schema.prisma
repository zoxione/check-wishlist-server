generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  fullname      String?
  email         String   @unique
  password      String
  about         String?
  imageUrl      String?
  backgroundUrl String?
  address       String?
  isVerified    Boolean  @default(false)
  role          String   @default("user")
  tiktokName    String?
  twitterName   String?
  vkName        String?
  telegramName  String?
  instagramName String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Gift {
  id          String   @id @default(cuid())
  title       String
  description String?
  shopName    String
  shopUrl     String
  price       Int
  imageUrl    String?
  isGifted    Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(cuid())
  giftId      String
  userId      String
  gifterId    String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
